<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#2196F3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Policies"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spAgent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            app:ms_alignLabels="false"
            app:ms_arrowColor="#2196F3"
            app:ms_arrowSize="12dp"
            app:ms_baseColor="@color/base"
            app:ms_errorColor="@color/error"
            app:ms_floatingLabelColor="#2196F3"
            app:ms_floatingLabelText="Agent"
            app:ms_highlightColor="@color/highlight"
            app:ms_hint="Agent"
            app:ms_multiline="false" />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spCmp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:ms_alignLabels="false"
            app:ms_arrowColor="#2196F3"
            app:ms_arrowSize="12dp"
            app:ms_baseColor="@color/base"
            app:ms_errorColor="@color/error"
            app:ms_floatingLabelColor="#2196F3"
            app:ms_floatingLabelText="Company"
            app:ms_highlightColor="@color/highlight"
            app:ms_hint="Company"
            app:ms_multiline="false" />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:ms_alignLabels="false"
            app:ms_arrowColor="#2196F3"
            app:ms_arrowSize="12dp"
            app:ms_baseColor="@color/base"
            app:ms_errorColor="@color/error"
            app:ms_floatingLabelColor="#2196F3"
            app:ms_floatingLabelText="Status"
            app:ms_highlightColor="@color/highlight"
            app:ms_hint="Status"
            app:ms_multiline="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edSearchBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:hint="Search..."
            android:textColor="#494949"
            android:textColorHint="#909599"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_action_search" />

        <ImageView
            android:id="@+id/imgNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_content_add" />

    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#909599" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D8DFE6" />


</LinearLayout>
