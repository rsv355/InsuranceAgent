<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#2196F3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Client"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSubHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="New"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"
            android:src="@drawable/ic_close" />

        <ImageView
            android:id="@+id/imgSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"
            android:src="@drawable/ic_content_save" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0C6CC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C0C6CC"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="ID"
                    android:textSize="14sp"
                    app:met_baseColor="#494949"
                    app:met_floatingLabel="highlight"
                    app:met_maxCharacters="20"
                    app:met_primaryColor="?colorAccent"
                    app:met_singleLineEllipsis="true"
                    app:met_textColorHint="#909599" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Name"
                    android:textSize="14sp"
                    app:met_baseColor="#494949"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="?colorAccent"
                    app:met_singleLineEllipsis="true"
                    app:met_textColorHint="#909599" />

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spCType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="#2196F3"
                    app:ms_arrowSize="12dp"
                    app:ms_baseColor="@color/base"

                    app:ms_errorColor="@color/error"
                    app:ms_floatingLabelColor="#2196F3"
                    app:ms_floatingLabelText="Client Type"
                    app:ms_highlightColor="@color/highlight"
                    app:ms_hint="Select Client Type"
                    app:ms_multiline="false" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Birthday"
                    android:textSize="14sp"
                    app:met_baseColor="#494949"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="?colorAccent"
                    app:met_singleLineEllipsis="true"
                    app:met_textColorHint="#909599" />

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spGender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="#2196F3"
                    app:ms_arrowSize="12dp"
                    app:ms_baseColor="@color/base"

                    app:ms_errorColor="@color/error"
                    app:ms_floatingLabelColor="#2196F3"
                    app:ms_floatingLabelText="Gender"
                    app:ms_highlightColor="@color/highlight"
                    app:ms_hint="Select Gender"
                    app:ms_multiline="false" />

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spMStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="#2196F3"
                    app:ms_arrowSize="12dp"
                    app:ms_baseColor="@color/base"

                    app:ms_errorColor="@color/error"
                    app:ms_floatingLabelColor="#2196F3"
                    app:ms_floatingLabelText="Marital Status"
                    app:ms_highlightColor="@color/highlight"
                    app:ms_hint="Select Marital Status"
                    app:ms_multiline="false" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="example@gmail.com"
                    android:textSize="14sp"
                    app:met_baseColor="#494949"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="?colorAccent"
                    app:met_singleLineEllipsis="true"
                    app:met_textColorHint="#909599" />


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Address"
                    android:textSize="14sp"
                    app:met_baseColor="#494949"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="?colorAccent"
                    app:met_textColorHint="#909599" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edCellPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="0.85"
                        android:hint="Cell Phone (###) ###-###"
                        android:textSize="14sp"
                        app:met_baseColor="#494949"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="?colorAccent"
                        app:met_singleLineEllipsis="true"
                        app:met_textColorHint="#909599" />

                    <ImageView
                        android:id="@+id/imgImportCell"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.15"
                        android:src="@drawable/ic_action_perm_contact_cal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edHomePhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="0.85"
                        android:hint="Home Phone (###) ###-###"
                        android:textSize="14sp"
                        app:met_baseColor="#494949"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="?colorAccent"
                        app:met_singleLineEllipsis="true"
                        app:met_textColorHint="#909599" />

                    <ImageView
                        android:id="@+id/imgImportHome"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.15"
                        android:src="@drawable/ic_action_perm_contact_cal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edWorkPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="0.85"
                        android:hint="Work Phone (###) ###-###"
                        android:textSize="14sp"
                        app:met_baseColor="#494949"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="?colorAccent"
                        app:met_singleLineEllipsis="true"
                        app:met_textColorHint="#909599" />

                    <ImageView
                        android:id="@+id/imgImportWork"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.15"
                        android:src="@drawable/ic_action_perm_contact_cal" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edEmergencycontact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="0.85"
                        android:hint="Emergency Contact"
                        android:textSize="14sp"
                        app:met_baseColor="#494949"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="?colorAccent"
                        app:met_singleLineEllipsis="true"
                        app:met_textColorHint="#909599" />

                    <ImageView
                        android:id="@+id/imgImportEmergency"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.15"
                        android:src="@drawable/ic_action_perm_contact_cal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edEmergencyPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="0.85"
                        android:hint="Emergency Phone (###) ###-###"
                        android:textSize="14sp"
                        app:met_baseColor="#494949"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="?colorAccent"
                        app:met_singleLineEllipsis="true"
                        app:met_textColorHint="#909599" />

                    <ImageView
                        android:id="@+id/imgImportEmergencyPhone"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.15"
                        android:src="@drawable/ic_action_perm_contact_cal" />
                </LinearLayout>


                <com.rengwuxian.materialedittext.MaterialEditText

                    android:id="@+id/edNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Notes"
                    android:textSize="14sp"
                    app:met_baseColor="#494949"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="?colorAccent"
                    app:met_textColorHint="#909599" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
